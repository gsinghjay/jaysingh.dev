---
layout: layouts/base.njk
title: Resume
description: Jay Singh's professional resume with work experience, education, and technical skills.
permalink: /resume/
---

{% from "components/card.njk" import card %}
{% from "components/tag.njk" import tag %}

{# Date formatting macro - converts "YYYY-MM" to "MMM YYYY" #}
{% macro formatDate(dateString) %}
  {%- set months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'] -%}
  {%- set parts = dateString.split('-') -%}
  {{- months[parts[1] | int - 1] }} {{ parts[0] -}}
{% endmacro %}

<div class="py-8">
  {# Header with title and download button #}
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-12 gap-4">
    <h1 class="text-4xl font-black">
      WORK <span class="bg-blue-400 px-2">HISTORY</span>
    </h1>
    <button data-print-resume
            class="flex items-center gap-2 px-4 py-2 bg-blue-400 border-4 border-black font-bold uppercase text-sm hover:bg-lime-400 transition-all duration-150 active:translate-y-1 focus:outline-4 focus:outline-black focus:outline-offset-2"
            style="box-shadow: 4px 4px 0 #000;">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      DOWNLOAD CV
    </button>
  </div>

  {# Work Experience Section #}
  <div class="space-y-6">
    {% for exp in resume.experience %}
      {% call card() %}
        <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
          <div>
            <h2 class="text-2xl font-black mb-2">{{ exp.position }}</h2>
            <p class="text-xl font-bold">{{ exp.company }}</p>
          </div>
          <div class="text-sm text-neutral-500 mt-2 md:mt-0 md:text-right">
            <p class="font-bold">
              {{ formatDate(exp.startDate) }} - {% if exp.current %}PRESENT{% else %}{{ formatDate(exp.endDate) }}{% endif %}
            </p>
          </div>
        </div>

        <ul class="space-y-2 border-t-4 border-black pt-4">
          {% for resp in exp.responsibilities %}
            <li class="flex gap-3 text-base text-neutral-600">
              <span class="font-bold">•</span>
              <span>{{ resp }}</span>
            </li>
          {% endfor %}
        </ul>
      {% endcall %}
    {% endfor %}
  </div>

  {# Education Section #}
  {% if resume.education and resume.education.length > 0 %}
    <div class="mt-12">
      <h2 class="text-3xl font-black mb-6">EDUCATION</h2>
      <div class="space-y-6">
        {% for edu in resume.education %}
          {% call card() %}
            <div class="flex flex-col md:flex-row md:justify-between md:items-start">
              <div>
                <h3 class="text-xl font-black mb-2">{{ edu.degree }}</h3>
                <p class="text-base font-bold">{{ edu.institution }}</p>
              </div>
              <div class="text-sm text-neutral-500 mt-2 md:mt-0">
                <p class="font-bold">
                  {{ formatDate(edu.startDate) }} - {{ formatDate(edu.endDate) }}
                </p>
              </div>
            </div>
          {% endcall %}
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {# Technical Toolkit Section #}
  {# Skill categories mapping: display name → skills.json key #}
  {% set skillCategories = [
    {name: 'FRONTEND', key: 'frontend'},
    {name: 'BACKEND', key: 'backend'},
    {name: 'DATA', key: 'database'},
    {name: 'INFRA', key: 'devops'},
    {name: 'OBSERVABILITY', key: 'observability'},
    {name: 'SECURITY', key: 'security'},
    {name: 'TESTING', key: 'testing'},
    {name: 'TOOLS', key: 'tools'},
    {name: 'ARCHITECTURE', key: 'architecture'},
    {name: 'CLOUD', key: 'cloud'}
  ] %}
  <div class="mt-12">
    <h2 class="text-3xl font-black mb-6">
      TECHNICAL <span class="bg-lime-400 px-2">TOOLKIT</span>
    </h2>
    <div class="grid md:grid-cols-2 gap-6">
      {% for cat in skillCategories %}
        <div class="bg-lime-400 border-4 border-black p-6" style="box-shadow: 6px 6px 0 #000;">
          <h3 class="text-xl font-black mb-3">{{ cat.name }}</h3>
          <div class="flex flex-wrap gap-2">
            {% for skill in skills[cat.key] %}
              {{ tag(skill) }}
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
