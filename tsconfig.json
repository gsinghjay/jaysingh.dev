{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["lib/**/*", "scripts/**/*", "tests/**/*", "*.config.ts"],
  "exclude": ["node_modules", "_site"]
}
