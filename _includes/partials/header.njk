{# Header partial - 1:1 parity with React Header.tsx #}
{% set navItems = [
  { url: '/', text: 'HOME' },
  { url: '/blog/', text: 'BLOG' },
  { url: '/projects/', text: 'PROJECTS' },
  { url: '/resume/', text: 'RESUME' },
  { url: '/contact/', text: 'CONTACT' }
] %}

<div class="flex justify-between items-center">
  <a href="/"
     class="logo-btn bg-black text-white px-4 py-2 text-xl font-bold border-4 border-black hover:bg-yellow-400 hover:text-black transition-all duration-150 active:translate-y-1"
     aria-label="JAYSINGH.DEV - Home">
    JAYSINGH.DEV
  </a>

  {# Mobile menu button #}
  <button type="button"
          data-mobile-menu-toggle
          class="md:hidden border-2 border-black bg-white p-2 transition-all duration-150 active:translate-y-1"
          style="box-shadow: 3px 3px 0 #000"
          aria-label="Open menu"
          aria-expanded="false">
    <svg data-icon="menu" class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <line x1="3" y1="6" x2="21" y2="6"/>
      <line x1="3" y1="12" x2="21" y2="12"/>
      <line x1="3" y1="18" x2="21" y2="18"/>
    </svg>
    <svg data-icon="close" class="w-8 h-8 hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <line x1="6" y1="6" x2="18" y2="18"/>
      <line x1="6" y1="18" x2="18" y2="6"/>
    </svg>
  </button>

  <nav aria-label="Main navigation" class="hidden md:block">
    <ul class="md:flex gap-4">
      {% for item in navItems %}
        <li>
          <a href="{{ item.url }}"
             class="nav-btn inline-block px-4 py-2 text-sm font-bold uppercase border-2 border-black transition-all duration-150 active:translate-y-1 {% if page.url == item.url %}is-active bg-yellow-400 text-black{% else %}bg-white text-black hover:bg-lime-300{% endif %}"
             {% if page.url == item.url %}aria-current="page"{% endif %}>
            {{ item.text }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</div>

{# Mobile navigation menu #}
<nav data-mobile-menu class="hidden md:hidden" aria-label="Mobile navigation">
  <ul class="mt-4 border-t-4 border-black pt-4 flex flex-col gap-3">
    {% for item in navItems %}
      <li>
        <a href="{{ item.url }}"
           class="nav-btn-mobile{% if page.url == item.url %} is-active{% endif %}"
           {% if page.url == item.url %}aria-current="page"{% endif %}>
          {{ item.text }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
